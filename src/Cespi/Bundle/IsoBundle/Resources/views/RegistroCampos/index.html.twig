{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Campos del registro  {{ registro.nombre }} </h1>

    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Orden</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
            
                <td>{{ entity.orden }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.idtipocampo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('campos_registro_edit', { 'id': entity.id }) }}">Modificar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-default btn-sm" href="{{ path('campos_registro_new', { 'idRegistro': registro.id }) }}">
               <span class="glyphicon glyphicon-plus"></span> Agregar un nuevo campo
            </a>
            
             <a class="btn btn-default btn-sm" href="{{ path('registro') }}">
               <span class="glyphicon glyphicon-arrow-left"></span> Volver al listado de registros
            </a>
            
        </li>
    </ul>
    
    {% endblock %}
